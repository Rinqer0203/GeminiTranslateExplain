<Window
    x:Class="GeminiTranslateExplain.SimpleResultWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GeminiTranslateExplain"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SimpleResultWindow"
    Width="400"
    Height="300"
    MinWidth="300"
    MinHeight="150"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    ShowInTaskbar="False"
    Style="{StaticResource MaterialDesignWindow}"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.DataContext>
        <local:SimpleResultWindowViewModel />
    </Window.DataContext>

    <Grid>
        <!--  背景  -->
        <Border
            Padding="8"
            Background="{DynamicResource MaterialDesignPaper}"
            CornerRadius="8">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>

                <!--  バツボタン  -->
                <Button
                    Width="25"
                    Height="25"
                    Margin="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderBrush="{x:Null}"
                    Click="CloseButton_Click"
                    Cursor="Hand"
                    Style="{StaticResource MaterialDesignToolButton}"
                    ToolTip="閉じる">

                    <materialDesign:PackIcon
                        Width="20"
                        Height="20"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Kind="WindowClose" />
                </Button>

                <!--  表示内容  -->
                <TextBox
                    Grid.Row="0"
                    Margin="10,30,10,10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    local:FontZoomBehavior.IsZoomEnabled="True"
                    AcceptsReturn="True"
                    IsReadOnly="True"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding TranslatedText}"
                    TextWrapping="Wrap" />

                <TextBox
                    Grid.Row="1"
                    Margin="10,0,10,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    materialDesign:HintAssist.Hint="追加で質問"
                    AcceptsReturn="True"
                    FontSize="15"
                    Text="{Binding QuestionText, UpdateSourceTrigger=PropertyChanged}"
                    TextAlignment="Left"
                    TextWrapping="Wrap">

                    <TextBox.InputBindings>
                        <KeyBinding Command="{Binding SendQuestionCommand}" Gesture="Enter" />
                    </TextBox.InputBindings>
                </TextBox>
            </Grid>
        </Border>

        <Border
            Width="16"
            Height="16"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="Transparent"
            Cursor="SizeNWSE"
            MouseDown="ResizeGrip_MouseDown">

            <!--  グリップの模様（斜めライン風）  -->
            <Canvas Width="16" Height="16">
                <Line
                    Stroke="Gray"
                    StrokeThickness="1"
                    X1="4"
                    X2="16"
                    Y1="16"
                    Y2="4" />
                <Line
                    Stroke="Gray"
                    StrokeThickness="1"
                    X1="8"
                    X2="16"
                    Y1="16"
                    Y2="8" />
                <Line
                    Stroke="Gray"
                    StrokeThickness="1"
                    X1="12"
                    X2="16"
                    Y1="16"
                    Y2="12" />
            </Canvas>
        </Border>


    </Grid>
</Window>
