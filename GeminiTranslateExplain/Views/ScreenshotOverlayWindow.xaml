<Window
    x:Class="GeminiTranslateExplain.Views.ScreenshotOverlayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="#66000000"
    Topmost="True"
    ShowInTaskbar="False"
    ResizeMode="NoResize">
    <Canvas x:Name="RootCanvas">
        <TextBlock
            x:Name="InstructionText"
            Canvas.Left="16"
            Canvas.Top="16"
            Foreground="White"
            FontSize="14"
            Text="スクリーンショットモード (ESCでキャンセル)"
            IsHitTestVisible="False" />
        <Rectangle
            x:Name="SelectionRect"
            Stroke="#99FFFFFF"
            StrokeThickness="1"
            Fill="#33FFFFFF"
            Visibility="Collapsed" />
    </Canvas>
</Window>
