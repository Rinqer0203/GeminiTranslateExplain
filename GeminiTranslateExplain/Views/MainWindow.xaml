<Window
    x:Class="GeminiTranslateExplain.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GeminiTranslateExplain"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Style="{StaticResource MaterialDesignWindow}"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Row="0"
            Width="40"
            Height="40"
            Grid.Column="0"
            HorizontalAlignment="Left"
            HorizontalContentAlignment="Center"
            Margin="5"
            Style="{StaticResource MaterialDesignIconForegroundButton}"
            Command="{Binding OpenSettingWindowCommand}">
            <materialDesign:PackIcon
                Width="22"
                Height="22"
                Kind="Cog" />

        </Button>

        <Button
            Grid.Row="0"
            Grid.Column="0"
            Width="100"
            Command="{Binding TranslateTextCommand}"
            Content="Translate" />

        <ComboBox
            Grid.Row="0"
            Grid.Column="1"
            Width="190"
            Height="30"
            Margin="0,0,20,0"
            HorizontalAlignment="Right"
            HorizontalContentAlignment="Center"
            FontSize="14"
            ItemsSource="{Binding GeminiModelNames}"
            SelectedItem="{Binding SelectedGeminiModelName, Mode=TwoWay}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        Text="{Binding Name}"
                        ToolTipService.BetweenShowDelay="200"
                        ToolTipService.InitialShowDelay="300"
                        ToolTipService.ShowDuration="5000">
                        <TextBlock.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock Text="{Binding Rpm, StringFormat='RPM: {0}'}" />
                                    <TextBlock Text="{Binding Tpm, StringFormat='TPM: {0}'}" />
                                    <TextBlock Text="{Binding Rpd, StringFormat='RPD: {0}'}" />
                                </StackPanel>
                            </ToolTip>
                        </TextBlock.ToolTip>
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="5,0,0,0"
            BorderBrush="Gray"
            BorderThickness="1,2,2,2"
            CornerRadius="4">
            <TextBox
                Grid.Row="1"
                Grid.Column="0"
                Padding="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                VerticalContentAlignment="Top"
                local:FontZoomBehavior.IsZoomEnabled="True"
                local:SelectAllBehavior.IsSelectAllOnFocusEnabled="True"
                materialDesign:HintAssist.Hint="翻訳するテキストを入力してください"
                AcceptsReturn="True"
                FontSize="16"
                Text="{Binding SourceText}"
                TextAlignment="Left"
                TextWrapping="Wrap" />
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,0,5,0"
            BorderBrush="Gray"
            BorderThickness="1,2,2,2"
            CornerRadius="4">
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Padding="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                VerticalContentAlignment="Top"
                local:FontZoomBehavior.IsZoomEnabled="True"
                local:SelectAllBehavior.IsSelectAllOnFocusEnabled="True"
                materialDesign:HintAssist.Hint="翻訳結果"
                AcceptsReturn="True"
                FontSize="16"
                IsReadOnly="True"
                Text="{Binding TranslatedText}"
                TextAlignment="Left"
                TextWrapping="Wrap" />
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="5,5,5,5"
            BorderBrush="Gray"
            BorderThickness="2"
            CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <TextBox
                    Grid.Column="0"
                    Padding="10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Top"
                    materialDesign:HintAssist.Hint="追加で質問"
                    AcceptsReturn="True"
                    FontSize="16"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    Text="{Binding QuestionText, UpdateSourceTrigger=PropertyChanged}"
                    TextAlignment="Left"
                    TextWrapping="Wrap">

                    <TextBox.InputBindings>
                        <KeyBinding Command="{Binding SendQuestionCommand}" Gesture="Enter" />
                    </TextBox.InputBindings>
                </TextBox>
                <Button
                    Grid.Column="1"
                    Width="40"
                    Height="40"
                    Command="{Binding SendQuestionCommand}"
                    Style="{StaticResource MaterialDesignIconForegroundButton}">
                    <materialDesign:PackIcon
                        Width="22"
                        Height="22"
                        Kind="SendVariant" />
                </Button>

            </Grid>

        </Border>


    </Grid>

</Window>
