<Window
    x:Class="GeminiTranslateExplain.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GeminiTranslateExplain"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="GeminiTranslateExplain"
    Width="800"
    Height="450"
    MinWidth="700"
    MinHeight="300"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    Style="{StaticResource MaterialDesignWindow}"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Row="0"
            Grid.Column="0"
            Width="30"
            Height="30"
            Margin="5"
            HorizontalAlignment="Left"
            HorizontalContentAlignment="Center"
            Command="{Binding OpenSettingWindowCommand}"
            Style="{StaticResource MaterialDesignIconForegroundButton}">
            <materialDesign:PackIcon
                Width="17"
                Height="17"
                Kind="Cog" />

        </Button>

        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Margin="45,0,0,0"
            HorizontalAlignment="right"
            Orientation="Horizontal">
            <TextBlock
                Margin="0,0,8,0"
                VerticalAlignment="Center"
                FontSize="13"
                Text="プロンプト" />
            <ComboBox
                Width="160"
                Height="30"
                Margin="0,0,10,0"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Center"
                FontSize="14"
                ItemsSource="{Binding PromptProfiles}"
                SelectedItem="{Binding SelectedPromptProfile, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            HorizontalAlignment="Stretch"
                            Text="{Binding Name}"
                            TextAlignment="Center" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button
                Width="30"
                Height="30"
                Margin="0,0,10,0"
                Command="{Binding OpenPromptEditorWindowCommand}"
                Style="{StaticResource MaterialDesignIconForegroundButton}">
                <materialDesign:PackIcon
                    Width="16"
                    Height="16"
                    Kind="Pencil" />
            </Button>
        </StackPanel>

        <ComboBox
            Grid.Row="0"
            Grid.Column="1"
            Width="190"
            Height="30"
            Margin="0,0,20,0"
            HorizontalAlignment="Right"
            HorizontalContentAlignment="Center"
            FontSize="14"
            ItemsSource="{Binding AiModels}"
            SelectedItem="{Binding SelectedAiModel, Mode=TwoWay}" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,0,220,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            FontSize="13"
            Text="モデル" />

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="5,0,5,0"
            BorderBrush="Gray"
            BorderThickness="1,2,2,2"
            CornerRadius="4">
            <ListBox
                Padding="10"
                Background="Transparent"
                BorderThickness="0"
                ScrollViewer.CanContentScroll="False"
                local:AutoScrollBehavior.IsEnabled="True"
                ItemsSource="{Binding ChatMessages}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="materialDesign:RippleAssist.IsDisabled" Value="True" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        BorderThickness="0">
                                        <ContentPresenter />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,0,0,12">
                            <Border
                                x:Name="MessageBubble"
                                Padding="10"
                                Background="{DynamicResource ChatAiBubbleBackground}"
                                BorderBrush="{DynamicResource ChatAiBubbleBorder}"
                                BorderThickness="1"
                                CornerRadius="10">
                                <StackPanel>
                                    <TextBlock
                                        x:Name="MessageLabel"
                                        FontSize="12"
                                        Foreground="{DynamicResource ChatLabelForeground}"
                                        Text="{Binding DisplayName}" />
                                    <TextBox
                                        x:Name="MessageBody"
                                        FontSize="15"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="{DynamicResource ChatAiBubbleForeground}"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                        IsReadOnly="True"
                                        Style="{x:Null}"
                                        Text="{Binding Text}"
                                        TextWrapping="Wrap" />
                                    <Image
                                        x:Name="MessageImage"
                                        MaxWidth="360"
                                        MaxHeight="240"
                                        Margin="0,8,0,0"
                                        Source="{Binding ImageSource}"
                                        Stretch="Uniform"
                                        Visibility="Visible" />
                                </StackPanel>
                            </Border>
                        </Grid>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding ImageSource}" Value="{x:Null}">
                                <Setter TargetName="MessageImage" Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Role}" Value="user">
                                <Setter TargetName="MessageBubble" Property="Background" Value="{DynamicResource ChatAiBubbleBackground}" />
                                <Setter TargetName="MessageBubble" Property="BorderBrush" Value="{DynamicResource ChatAiBubbleBorder}" />
                                <Setter TargetName="MessageBubble" Property="HorizontalAlignment" Value="Right" />
                                <Setter TargetName="MessageLabel" Property="Foreground" Value="{DynamicResource ChatUserBubbleForeground}" />
                                <Setter TargetName="MessageBody" Property="Foreground" Value="{DynamicResource ChatUserBubbleForeground}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Role}" Value="assistant">
                                <Setter TargetName="MessageBubble" Property="Background" Value="Transparent" />
                                <Setter TargetName="MessageBubble" Property="BorderBrush" Value="Transparent" />
                                <Setter TargetName="MessageBubble" Property="BorderThickness" Value="0" />
                                <Setter TargetName="MessageBubble" Property="HorizontalAlignment" Value="Left" />
                                <Setter TargetName="MessageLabel" Property="Foreground" Value="{DynamicResource ChatLabelForeground}" />
                                <Setter TargetName="MessageBody" Property="Foreground" Value="{DynamicResource ChatAiBubbleForeground}" />
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="5,5,5,5"
            BorderBrush="Gray"
            BorderThickness="2"
            CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <TextBox
                    Grid.Column="0"
                    Padding="10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Top"
                    materialDesign:HintAssist.Hint="質問を入力"
                    AcceptsReturn="True"
                    FontSize="16"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    Text="{Binding QuestionText, UpdateSourceTrigger=PropertyChanged}"
                    TextAlignment="Left"
                    TextWrapping="Wrap">

                    <TextBox.InputBindings>
                        <KeyBinding Command="{Binding SendQuestionCommand}" Gesture="Enter" />
                    </TextBox.InputBindings>
                </TextBox>
                <Button
                    Grid.Column="1"
                    Width="40"
                    Height="40"
                    Command="{Binding SendQuestionCommand}"
                    Style="{StaticResource MaterialDesignIconForegroundButton}">
                    <materialDesign:PackIcon
                        Width="22"
                        Height="22"
                        Kind="SendVariant" />
                </Button>

            </Grid>

        </Border>


    </Grid>

</Window>
