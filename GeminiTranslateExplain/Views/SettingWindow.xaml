<Window
    x:Class="GeminiTranslateExplain.SettingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:GeminiTranslateExplain"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingWindow"
    Width="650"
    Height="500"
    MinWidth="650"
    MinHeight="450"
    Style="{StaticResource MaterialDesignWindow}"
    mc:Ignorable="d">

    <Window.DataContext>
        <local:SettingWindowViewModel />
    </Window.DataContext>

    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel
                Margin="30,0,30,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <TextBlock
                    Margin="-30,0,0,20"
                    FontSize="20"
                    Text="設定" />

                <!--  APIキー入力  -->
                <TextBox
                    Margin="0,0,0,20"
                    HorizontalAlignment="Stretch"
                    materialDesign:HintAssist.Hint="API Key"
                    materialDesign:TextFieldAssist.DecorationVisibility="Visible"
                    FontSize="15"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding ApiKey}" />

                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="12"
                    Text="ショートカット起動時のウィンドウタイプ"
                    TextAlignment="Left"
                    TextWrapping="Wrap" />
                <ComboBox
                    Margin="0,0,0,20"
                    HorizontalAlignment="Stretch"
                    ItemsSource="{Binding WindowTypeItems}"
                    SelectedItem="{Binding SelectedResultWindowType, Mode=TwoWay}" />

                <!--  システム命令  -->
                <TextBox
                    Height="100"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Top"
                    local:FontZoomBehavior.IsZoomEnabled="True"
                    materialDesign:HintAssist.Hint="システム命令"
                    AcceptsReturn="True"
                    FontSize="15"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding SystemInstruction}"
                    TextAlignment="Left"
                    TextWrapping="Wrap" />

                <!--  カスタム命令  -->
                <TextBox
                    Height="100"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Top"
                    local:FontZoomBehavior.IsZoomEnabled="True"
                    materialDesign:HintAssist.Hint="カスタム命令"
                    AcceptsReturn="True"
                    FontSize="15"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding CustomSystemInstruction}"
                    TextAlignment="Left"
                    TextWrapping="Wrap" />

                <CheckBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Left"
                    Content="パソコン起動時に自動起動"
                    IsChecked="{Binding StartupWithWindows}"
                    Style="{StaticResource MaterialDesignCheckBox}" />

                <CheckBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Left"
                    Content="最小化して起動"
                    IsChecked="{Binding MinimizeToTray}"
                    Style="{StaticResource MaterialDesignCheckBox}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>


</Window>
