<Window
    x:Class="GeminiTranslateExplain.SettingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:GeminiTranslateExplain"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="設定"
    Width="650"
    Height="500"
    MinWidth="650"
    MinHeight="450"
    Style="{StaticResource MaterialDesignWindow}"
    mc:Ignorable="d">

    <Window.DataContext>
        <local:SettingWindowViewModel />
    </Window.DataContext>

    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel
                Margin="30,0,30,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <TextBlock
                    Margin="-30,0,0,20"
                    FontSize="20"
                    Text="設定" />

                <!--  APIキー入力  -->
                <TextBox
                    Margin="0,0,0,20"
                    HorizontalAlignment="Stretch"
                    materialDesign:HintAssist.Hint="Gemini API Key"
                    materialDesign:TextFieldAssist.DecorationVisibility="Visible"
                    FontSize="15"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding GeminiApiKey}" />

                <TextBox
                    Margin="0,0,0,20"
                    HorizontalAlignment="Stretch"
                    materialDesign:HintAssist.Hint="OpenAI API Key"
                    materialDesign:TextFieldAssist.DecorationVisibility="Visible"
                    FontSize="15"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding OpenAiApiKey}" />

                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="12"
                    Text="ショートカット起動時のウィンドウタイプ"
                    TextAlignment="Left"
                    TextWrapping="Wrap" />
                <ComboBox
                    Margin="0,0,0,20"
                    HorizontalAlignment="Stretch"
                    ItemsSource="{Binding WindowTypeItems}"
                    SelectedItem="{Binding SelectedResultWindowType, Mode=TwoWay}" />

                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="12"
                    Text="テーマ"
                    TextAlignment="Left"
                    TextWrapping="Wrap" />
                <ComboBox
                    Margin="0,0,0,20"
                    HorizontalAlignment="Stretch"
                    ItemsSource="{Binding ThemeModeItems}"
                    SelectedItem="{Binding SelectedThemeMode, Mode=TwoWay}" />

                <TextBox
                    Margin="0,0,0,20"
                    HorizontalAlignment="Stretch"
                    materialDesign:HintAssist.Hint="グローバルショートカットキー"
                    materialDesign:TextFieldAssist.DecorationVisibility="Visible"
                    FontSize="15"
                    IsReadOnly="True"
                    PreviewKeyDown="GlobalHotKeyTextBox_PreviewKeyDown"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding GlobalHotKeyDisplay}" />

                <TextBox
                    Margin="0,0,0,20"
                    HorizontalAlignment="Stretch"
                    materialDesign:HintAssist.Hint="スクリーンショートカットキー"
                    materialDesign:TextFieldAssist.DecorationVisibility="Visible"
                    FontSize="15"
                    IsReadOnly="True"
                    PreviewKeyDown="ScreenshotHotKeyTextBox_PreviewKeyDown"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding ScreenshotHotKeyDisplay}" />

                <CheckBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Left"
                    Content="システム起動時に自動起動"
                    IsChecked="{Binding StartupWithWindows}"
                    Style="{StaticResource MaterialDesignCheckBox}" />

                <CheckBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Left"
                    Content="最小化して起動"
                    IsChecked="{Binding MinimizeToTray}"
                    Style="{StaticResource MaterialDesignCheckBox}" />

                <CheckBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Left"
                    Content="ダブルコピーで翻訳を有効にする"
                    IsChecked="{Binding EnableDoubleCopyAction}"
                    Style="{StaticResource MaterialDesignCheckBox}" />

                <CheckBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Left"
                    Content="透明スクリーンショットモード"
                    IsChecked="{Binding ScreenshotStealthMode}"
                    Style="{StaticResource MaterialDesignCheckBox}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>


</Window>
